diff --git a/configure.ac b/configure.ac
index c8939029c..b9a0e3d58 100644
--- a/configure.ac
+++ b/configure.ac
@@ -3020,9 +3020,9 @@ AC_ARG_WITH([ssl-engine],
 
 nocrypto_saved_LIBS="$LIBS"
 if test "x$openssl" = "xyes" ; then
-	LIBS="-lcrypto $LIBS"
